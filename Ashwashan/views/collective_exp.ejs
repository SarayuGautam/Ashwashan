                    <h4 class="card-title"><%= post.postTitle %></h4>
                    <hr>
                    <div class="text-flow">
                        <p class="card-text"><%= post.postBody.substr(1, 200) %></p>
                    </div>
                    <div class="text-right">
                        <a class="btn btn-outline-primary" href="#" role="button">Read More</a></div>
                </div>
            </div>
             <% }) %>
            <!-- /.card -->
        </div>
        <!-- /.col-sm-4 -->
    </div>
    <!-- /.row -->

</div>
